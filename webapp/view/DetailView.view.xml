<mvc:View controllerName="app.miningjsonproject.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    >

    <Page id="idFurtherPage" title="Furtherdetailview">
        <content>
            <VBox>
                <Label text="Location Images" class="imageHeading" />
                <HBox justifyContent="SpaceBetween" class="imageContainer">
                    <Image src="{MiningModel>details/image1}"  class="locationImage" />
                    <Image src="{MiningModel>details/image2}"  class="locationImage" />
                </HBox>
                <f:SimpleForm id="idSimple" editable="true" layout="ResponsiveGridLayout">
                    <Label text="Location ID"></Label>
                    <Text text="{MiningModel>id}" id="idLocId"></Text>

                    <Label text="Location Name"></Label>
                    <Text text="{MiningModel>name}" id="idConFr"></Text>

                    <Label text="Accessibility"></Label>
                    <Text text="{MiningModel>details/accessibility}" id="idFliFr"></Text>

                    <Label text="Historical success rate"></Label>
                    <Text text="{MiningModel>details/historical_success_rate}" id="idBookFr"></Text>

                    <Label text="Impact"></Label>
                    <Text text="{MiningModel>details/environmental_impact}" id="idOrdFr"></Text>
                </f:SimpleForm>
                <Button text="Edit" press="onEdit" class="editButton" />
            </VBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Create" press="onCreatePress" class="footerButton"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
